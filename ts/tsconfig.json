{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": false,
    "sourceMap": false,
    "outDir": "build",
    "baseUrl": "./",
    "types": ["node", "jest"],
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "@models/*": ["../commons/ts-lib/src/models/*"],
      "src/*": ["./src/*"],
      "*": ["../../node_modules/*"]
    },
    "lib": ["es5", "es2015.promise"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "src/**/*.json", "swagger.ts"],
  "exclude": []
}
